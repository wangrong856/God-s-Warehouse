/* 水平间距 */
.vi_swiper_box {
  width: 100%;
  display: flex;
}
.vi_swiper_box .vi_top {
  width: 8%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 10rpx;
  box-sizing: border-box;
}
.vi_swiper_box .vi_image {
  width: 30%;
}
.vi_swiper_box .vi_bot {
  box-sizing: border-box;
  flex: 1;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.vi_swiper_box .vi_bot .vi_s {
  font-size: 25rpx;
}
.vi_swiper_box .vi_bot .vi_x {
  display: flex;
  justify-content: space-between;
}
.vi_footer {
  width: 100%;
  height: 110rpx;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  box-sizing: border-box;
}
.vi_footer .vi_cen text {
  color: red;
}
.vi_footer .vi_bot {
  width: 200rpx;
  height: 110rpx;
  line-height: 130rpx;
  background: #c00;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
}

